#!/bin/sh

outdir="$HOME/Pictures/Screenshots"
mkdir -p "$outdir"

filename="$(date +%Y-%m-%d_%H-%M-%S).png"
output="$outdir/$filename"

tmpfile=$(mktemp /tmp/maim-XXXXXX.png)

if maim -s "$tmpfile"; then
    xclip -selection clipboard -t image/png "$tmpfile"
    mv "$tmpfile" "$output"
    notify-send "Screenshot" "Saved Screenshot to: $output"
else
    rm -f "$tmpfile"
    exit 1
fi

